{
  "variables": {
    "ami_id": "{{env `ANSIBLE_HARNESS_AMI`}}",
    "environment_name": "{{env `ANSIBLE_HARNESS_ENVIRONMENT`}}",
    "subnet_id": "{{env `ANSIBLE_HARNESS_SUBNET_ID`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "{{user `ami_id`}}",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "ami_name": "packer {{user `environment_name`}} {{timestamp}}",
      "associate_public_ip_address": true,
      "subnet_id": "{{user `subnet_id`}}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "{{template_dir}}/../bootstrap.sh"
    },
    {
      "type": "ansible",
      "playbook_file": "{{template_dir}}/../playbook.yml"
    }
  ]
}
